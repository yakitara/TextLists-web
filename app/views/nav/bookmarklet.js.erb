window.Items = {
  bookmark: function(user_id, key) {
    var f=document.createElement('form');
    f.method='post';
    f.target='_blank';
    f.action='<%= api_items_url %>?user_id=' + user_id + '&key=' + key;
    var h=document.createElement('input');
    h.type='hidden';
    h.name='item[content]';
    h.value= document.title+'\n'+document.location+'\n\n'+document.getSelection();
    f.appendChild(h);
    document.body.appendChild(f);
    f.submit();
  }
};
