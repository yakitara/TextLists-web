<%= form_for [@list, @item] do |form| %>
<% if @item.errors.any? %>
  <div id="errorExplanation">
    <h2>The following errors prohibited this form from being saved:</h2>
    <ul>
    <% @item.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>

  <div>
    <%= form.fields_for :listings do |listings_fields| %>
      <%= listings_fields.collection_select :list_id, @lists, :id, :name %>
    <% end %>
  </div>
  <div>
    <%= form.text_area :content, :rows => 8 %>
  </div>
  <div>
    <button type="submit">save</button>
  <% if @list && !@item.new_record? %>
    | <%= link_to "done", list_item_listing_path(@list, @item, @item.listings.first), :method => "delete" %>
  <% end %>
  </div>
<% end %>
